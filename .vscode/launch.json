	"version": "0.2.0",
	"configurations": [
		{
			"name": "Client - Build typescript files and and Launch Chrome for client-side debugging",
			"request": "launch",
			"type": "pwa-chrome",
			"url": "file:///C:/dev/Git/Playground.Typescript/src/RunClientSideTypeScript.html",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "tsc: build - tsconfig.json"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Server - Build typescript files and Launch Node for server-side debugging",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\src\\HelloWorld.ts",
			"preLaunchTask": "tsc: build - tsconfig.json",
			"outFiles": [
				"${workspaceFolder}/ts-output/**/*.js"
			]
		}
	]
}
