	"version": "0.2.0",
	"configurations": [
		{
			"name": "Build and Launch Chrome",
			"request": "launch",
			"type": "pwa-chrome",
			"url": "file:///C:/dev/Git/Playground.Typescript/src/HelloWorld.html",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "tsc: build - tsconfig.json"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Build typescript files",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\src\\ZipTest.ts",
			"preLaunchTask": "tsc: build - tsconfig.json",
			"outFiles": [
				"${workspaceFolder}/ts-output/**/*.js"
			]
		}
	]
}
